<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="a" class="bean.StudentA" scope="prototype">
       <property name="studentB" ref="b"/>
    </bean>
    <bean id="b" class="bean.StudentB" scope="prototype">
        <property name="studentC" ref="c"/>
    </bean>
    <bean id="c" class="bean.StudentC" scope="prototype">
        <property name="studentA" ref="a"/>
    </bean>

</beans>