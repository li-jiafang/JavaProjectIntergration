<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dev.project.dao.QsAnswerDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dev.project.domain.QsAnswerPO">
        <id column="id" property="id" />
        <result column="task_queue_id" property="taskQueueId" />
        <result column="content" property="content" />
        <result column="unique_key" property="uniqueKey" />
        <result column="delete_flag" property="deleteFlag" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, task_queue_id, content, unique_key, delete_flag, create_date, update_date
    </sql>

    <select id="getPage" resultType="com.dev.project.controller.vo.QsAnswerVO">
        select a.question_id,b.id,b.content,b.unique_key from qs_task_queue a left join qs_answer b on a.id = b.task_queue_id
    </select>
</mapper>
